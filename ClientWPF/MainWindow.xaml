<Window x:Class="ClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <Grid>
        <StackPanel Margin="0,100,0,0">
            <Button Content="View Customer Window" x:Name="btnCustomer" Margin="0,0,0,20" Width="200" Height="40" Click="btnCustomer_Click"/>
            <Button Content="View Order Window" x:Name="btnOrder" Width="200" Height="40" Click="btnOrder_Click"></Button>
        </StackPanel>



    </Grid>
</Window>
